# Produção - Educasa
NODE_ENV=production

# Database
DATABASE_URL=file:./database/educasa_prod.db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Base URL
NUXT_PUBLIC_API_BASE=https://educasa.app.br

# Cloudflare (para Traefik SSL)
CF_API_EMAIL=seu-email@cloudflare.com
CF_DNS_API_TOKEN=seu-token-cloudflare-aqui

# Let's Encrypt
ACME_EMAIL=seu-email@dominio.com

# Zeptomail (opcional)
ZEPTOMAIL_API_KEY=
ZEPTOMAIL_FROM_EMAIL=
ZEPTOMAIL_FROM_NAME=
EMAIL_WORKER_ENABLED=false

# === Exportação de Dados ===

# Email administrativo que receberá as exportações
EXPORT_TO_EMAIL=admin@sua-escola.com

# Tamanho do batch (alunos por email na exportação automática)
EXPORT_BATCH_SIZE=20

# === Cron Jobs ===

# Habilitar cron jobs (true/false)
CRON_ENABLED=false

# Segredo para proteger endpoints de cron (obrigatório se CRON_ENABLED=true)
# Gere com: openssl rand -base64 32
CRON_SECRET=

# Base URL da API (para chamadas internas do cron)
API_BASE=http://localhost:3000
