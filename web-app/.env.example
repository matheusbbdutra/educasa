# Database - SQLite
# Development
DATABASE_URL="file:./database/educasa_dev.db"

# Production (uncomment and use this in production)
# DATABASE_URL="file:./database/educasa_prod.db"

# JWT Secret - CHANGE THIS IN PRODUCTION
JWT_SECRET="your-secret-key-change-in-production"

# App
NODE_ENV="development"

# Sentry Configuration
SENTRY_DSN=""
SENTRY_DEBUG="false"
SENTRY_LOG_LEVEL="error" # error, warn, info, debug, none

# === Exportação de Dados ===

# Email administrativo que receberá as exportações
EXPORT_TO_EMAIL="administrativo@escola.com"

# Tamanho do batch (alunos por email na exportação automática)
# Padrão: 20 (ajuste conforme limite de 15MB do Zeptomail)
EXPORT_BATCH_SIZE="20"

# === Cron Jobs ===

# Habilitar cron jobs (true/false)
CRON_ENABLED="false"  # Desabilitado por padrão em desenvolvimento

# Segredo para proteger endpoints de cron (obrigatório se CRON_ENABLED=true)
# Gere com: openssl rand -base64 32
CRON_SECRET=""

# Base URL da API (para chamadas internas do cron)
# Em produção, use a URL interna ou localhost
API_BASE="http://localhost:3000"

# === Go Worker Integration ===

# URL do serviço Go worker (interno Docker)
# Para desenvolvimento local: http://localhost:8080
GO_WORKER_URL="http://go-worker:8080"

# Chave de API compartilhada com Go worker
# Gerar com: openssl rand -base64 32
GO_WORKER_API_KEY=""

# === Turso Cloud (para Go Worker) ===

# URL do Turso Database
# Formato: libsql://your-database.turso.io
TURSO_DATABASE_URL="libsql://your-database.turso.io"

# Token de autenticação do Turso
# Obter em: https://api.turso.tech/v1/orgs
TURSO_AUTH_TOKEN=""
